<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rectangle_bholu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_above="@+id/loadContainerBholu">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/start_image1_bholu" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStartBholu"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/radius_white_bholu"
            android:gravity="center"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Let's Start"
            android:textColor="@color/color4"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvStartBholu"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="start"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWelcomeBholu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:text="@string/strWelcomeTo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:maxLines="2"
                    android:text="@string/app_name"
                    android:textColor="@color/color7"
                    android:textSize="@dimen/_32sdp"
                    tools:ignore="HardcodedText" />

                <com.fastspeed.five5gbrowser.BholuVerticalTextView
                    android:id="@+id/tvRateBholu"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/radius_white_right2_bholu"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:rotation="180"
                    android:text="Rate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="HardcodedText" />

                <com.fastspeed.five5gbrowser.BholuVerticalTextView
                    android:id="@+id/tvShareBholu"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/radius_white_right2_bholu"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Share"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <include
        android:id="@+id/loadContainerBholu"
        layout="@layout/native_ad_common_bholu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

