<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fastweb.secureweblite.browser_bholu.BholuTabListFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/coloroffwhite" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/ToolbarBholu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <ImageView
                    android:id="@+id/imgbackBholu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/back_bholu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Tabs"
                    android:textColor="@color/colorblack"
                    android:textSize="18sp" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvtabsBholu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lytBottomBholu"
                android:layout_below="@id/ToolbarBholu"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/coloroffwhite"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2" />

            <RelativeLayout
                android:id="@+id/lytBottomBholu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/imgbookmarkBholu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:src="@drawable/bookmarks_bholu"
                    app:tint="@color/colorblack" />

                <ImageView
                    android:id="@+id/imgaddBholu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_sharp_add_24_bholu"
                    app:tint="@color/colorblack" />

                <ImageView
                    android:id="@+id/imghistryBholu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:src="@drawable/history_bholu"
                    app:tint="@color/colorblack" />
            </RelativeLayout>
        </RelativeLayout>


    </FrameLayout>
</layout>